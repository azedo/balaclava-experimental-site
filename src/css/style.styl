body
  background #1B2B34
  color white

.window
  background-color #BAD455
  position absolute
  color #000
  box-shadow 1px 1px 8px rgba(0,0,0,0.5)
  border-radius 5px
  .window-topBar
    background blue
    border-radius 5px 5px 0 0
    padding 5px
    color white
    a
      color currentColor
      text-decoration none
      padding 5px
  .window-content
    padding 15px
    p
      &:first-of-type
        margin-top 0
      &:last-of-type
        margin-bottom 0
  &.minimized
    // display inline-block
    bottom 0 !important
    top initial !important

.minimized
  .window-content
    display none

.controls
  float right
  padding 10px
  a
    padding 10px
    margin-left 15px
    border 1px solid lightgray
    display inline-block
    background lightgray
    color black
    text-decoration none
    &:hover
      opacity 0.5
