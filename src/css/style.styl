@import url('https://fonts.googleapis.com/css?family=Open+Sans');

*
  box-sizing border-box

body
  background #fff
  color #000
  font-family 'open sans'

#root
  position fixed
  top 0
  right 0
  bottom 0
  left 0

.page__logo
  position absolute
  top 10px
  left 20px
  width 250px
  img
    width 100%

@import './components/_windows.styl';

.controls
  float right
  padding 10px
  a
    padding 10px
    margin-left 15px
    border 1px solid lightgray
    display inline-block
    background lightgray
    color black
    text-decoration none
    &:hover
      opacity 0.5
